<%= form_for(@comment ||= Comment.new) do |f| %>
  <div class="row comment-form">
	  <div class="col-md-8">
	  	<%= f.hidden_field :entry_id, value: entry.id %>
	    <%= f.text_area :content, rows: 1, placeholder: 'Write a comment...' %>
	  </div>
	  <div class="col-md-2">
	      <%= f.submit "comment", class: "btn btn-primary" %>
	  </div>
  </div>
<%end%>
