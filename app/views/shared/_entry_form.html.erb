<%= form_for(@entry) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :title, placeholder: "Title...", id: "title" %>
    <%= f.text_area :content, placeholder: "Compose new entry...", id: "content" %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
